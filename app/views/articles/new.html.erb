<h1>New Article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f|%>

    <div>
        <%= f.label :title%>
        <div>
            <%= f.text_field :title%>
        </div>
    </div>
    <br>
    <div>
        <%= f.label :description%>
        <div>
            <%= f.text_area :description%>
        </div>
    </div>
    <br>
    <div>
        <%= f.submit %>
    </div>
<% end %>